<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-success"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
         <li>
           <%= full_message %>
         </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <label for="message_name" class="control-label col-md-1">名前:</label>
    <div class="col-md-9">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
    <div class="col-md-2"></div>
  </div>
  
  <div class="form-group">
    <label for="message_body" class="control-label col-md-1">内容:</label>
    <div class="col-md-9">
      <%= f.text_area :body, :class =>"form-control", :size=>"50x10" %>
    </div>
    <div class="col-md-2">
      <%= f.submit class: "btn btn-sm btn-success btn-lg btn_offset" %>
    </div>
  </div>
<% end %>
