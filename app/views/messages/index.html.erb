<div class= "form-group">
  <div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
         <span class="label label-success"><%= message.name %></span>
         <%= message.body %>
         <br>
         <% end %>
        
    </div>
  </div>

    <%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="message_name" class="control-label col-md-1">名前:</label>
      <div class="col-md-11">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
  </div>
  
  <div class="form-group">
    <label for="message_name" class="control-label col-md-1">内容:</label>
      <div class="col-md-11">
        <%= f.text_area :body, :class =>"form-control", :size=>"50x10" %>
      </div>
  </div>
  
  <div class="form-group">
    <div class="col-md-1 col-md-offset-11">
     <%= f.submit class: "btn btn-sm btn-success btn-lg" %>
    
     <% end %>
    </div>
  </div>

